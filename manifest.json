{
  "manifest_version": 2,

  "name": "Playlist generator",
  "short_name": "Playlist gen.",
  "description": "Turns your unused, youtube bookmarks that are laying around into a playlist loop so you can turn them into hours of entertainment!",
  "version": "1.3",

  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",

  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "extension-logo.png",
    "default_popup": "popup.html",
    "default_title": "Playlist Generator"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "https://www.youtube.com/*",
    "storage"
  ]
}
